{
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": []
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}